<div class="lg:pl-20 sticky top-0 z-40 flex h-16 shrink-0 items-center gap-x-4 border-b border-gray-200 bg-white px-4 shadow-sm sm:gap-x-6 sm:px-6 lg:px-8">
  <div class="h-6 w-px bg-gray-900/10 lg:hidden" aria-hidden="true"></div>
  <div class="ml-3 flex flex-1 gap-x-4 self-stretch lg:gap-x-6 justify-end">
    <div class="flex items-center gap-x-4 lg:gap-x-6">
      <div class="hidden lg:block lg:h-6 lg:w-px lg:bg-gray-900/10" aria-hidden="true"></div>
      <div class="relative" data-controller=<%= controller %>>
        <button type="button" class="-m-1.5 flex items-center p-1.5 z-50" id="user-menu-button" aria-expanded="false" aria-haspopup="true" data-action="click-><%= controller %>#toggle">
          <%= render RS::Topbar::Avatar::Component.new(user_id: @user_id, first_name: @first_name, last_name: @last_name) %>
          <span class="hidden lg:flex lg:items-center">
            <svg class="ml-2 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
            </svg>
          </span>
        </button>
        <div class="hidden absolute right-0 z-10 mt-2.5 w-32 origin-top-right rounded-md bg-white py-2 shadow-lg ring-1 ring-gray-900/5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1" data-<%= controller %>-target="menu">
          <div role="menuitem" tabindex="-1" id="user-menu-item-0" class="block px-3 py-1 leading-6 text-sm">
            <%= render RS::Link::Component.new(
                    url: '#',
                    text: t("components.rs.topbar.profile"),
                    color: 'gray'
                  ) %>
          </div>
          <div role="menuitem" tabindex="-1" id="user-menu-item-1" class="block px-3 py-1 leading-6 text-sm">
            <%= render RS::Link::Component.new(
                    url: destroy_user_session_path,
                    text: t("components.rs.topbar.signout"),
                    color: 'gray',
                    method: 'delete'
                  ) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

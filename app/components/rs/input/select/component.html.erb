<select id="<%= @id %>" name="<%= @name %>" type="<%= @type %>" autocomplete="<%= @autocomplete %>" <%= "required" if @required %> class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:max-w-xs sm:text-sm sm:leading-6" <%= "disabled" if @disabled %> <%= "multiple" if @multiple %>>
  <% if @placeholder %>
    <option value="" disabled selected><%= @placeholder %></option>
  <% end %>
  <% items.each do |item| %>
    <option value=<%= item[:value]%> <%= 'selected' if item[:selected] %>><%= item[:description] %></option>
  <% end %>
</select>

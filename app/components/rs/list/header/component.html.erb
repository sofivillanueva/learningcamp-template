<thead>
  <tr>
    <% column_names.each_with_index do |column_name, index| %>
       <th scope="col" class="<%= index.zero? ? 'pl-4 pr-3 sm:pl-3' : 'px-3' %> py-3.5 text-left text-sm font-semibold text-neutral-900"><%= column_name %></th>
    <% end %>

    <% if actions %>
      <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-3">
        <span class="sr-only"><%= t('components.rs.list.header.actions') %></span>
      </th>
    <% end %>
  </tr>
</thead>

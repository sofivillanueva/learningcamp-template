<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="mx-auto w-full max-w-md">
    <div class="mx-auto text-center w-16">
      <%= render RS::Logo::Component.new(src: 'icons/mark_dark.svg', alt: 'Your Company') %>
    </div>
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-neutral-900"><%= t('devise.invitations.edit.header') %></h2>
  </div>
  <div class="mt-10 mx-auto w-full max-w-md">
    <%= rs_form_with(model: resource, local:true, url: invitation_path(resource_name), method: :put) do |f| %>
      <%= f.hidden_field :invitation_token, readonly: true %>
      <% if f.object.class.require_password_on_accepting %>
        <div class="mt-4">
          <%= f.field :password, label: t('.password'), autocomplete: 'password', required: true, as: :password %>
        </div>
        <div class="mt-4">
          <%= f.field :password_confirmation, label: t('.password_confirmation'), autocomplete: 'password_confirmation', required: true, as: :password %>
        </div>
      <% end %>
      <% flash.each do |key, message| %>
        <div class="text-error-500 mt-1">
          <%= message %>
        </div>
      <% end %>
      <div class="actions flex justify-center mt-8">
        <%= f.submit text: t('devise.invitations.edit.submit_button') %>
      </div>
    <% end %>
  </div>
</div>

<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="mx-auto w-full max-w-md">
    <div class="mx-auto text-center w-16">
      <%= render RS::Logo::Component.new(src: 'icons/mark_dark.svg', alt: 'Your Company') %>
    </div>
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-neutral-900"><%= t('.reset_your_password') %></h2>
    <h3 class="mt-2 text-center tracking-tight text-neutral-900"><%= t('.password_msg') %></h3>
  </div>
  <div class="mt-2 mx-auto w-full max-w-md">
    <%= rs_form_with model: resource, url: password_path(resource_name), local: true, class: "mt-8 space-y-6" do |f| %>
      <%= f.field :email, label: t('.email_address'), autocomplete: 'email', required: true, as: :email  %>
      <div class="flex justify-center flex-col">
        <div>
          <%= f.submit text: t('.send_email') %>
        </div>
        <div class="relative flex py-5 items-center">
          <div class="flex-grow border-t border-gray-400"></div>
          <span class="flex-shrink mx-4 text-gray-400">Or</span>
          <div class="flex-grow border-t border-gray-400"></div>
        </div>
        <%= render RS::LinkButton::Component.new(url: new_session_path(resource_name), text: t('.back_login'), variant: :soft) %>
      </div>
    <% end %>
  </div>
</div>
